<Window x:Class="VimatecWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"         
        xmlns:local="clr-namespace:VimatecWPF"    
        xmlns:rul="VimatecWPF.ViewModels"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        DataContext="{Binding ReiceptViewModel}"
        mc:Ignorable="d"
        Title="" Height="1080" Width="1920" WindowState="Maximized">
    
    <Window.Resources>
        <Style x:Key="NameCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Stretch"/>
        </Style>
    </Window.Resources>
    <Grid >
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseMove" >
                <i:InvokeCommandAction Command="{Binding DoMouseMove}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <TabControl  Grid.Row="1" Grid.RowSpan="1" TabStripPlacement="Right"  SelectedIndex="0" >
            <TabItem IsEnabled="True" Visibility="Visible" HorizontalAlignment="Right" Width="211">
                <TabItem.Header  >

                    <StackPanel>
                        <Label  Grid.RowSpan="1" Content="ОСНОВНОЕ ОКНО" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FFD26426" Margin="10,0,10,0"/>

                    </StackPanel>
                </TabItem.Header>
                <GroupBox Header="" Margin="5" Padding="5" FontFamily="Tahoma" Foreground="DarkOrange" IsEnabled="True">
                    <Grid>
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>

                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="120"/>
                            </Grid.RowDefinitions>
                            <GroupBox Grid.Column="0" HorizontalAlignment="Stretch" Header="ПОКАЗАТЕЛИ ОБОРУДОВАНИЯ" Margin="5"  Padding="5" FontFamily="Tahoma" Foreground="DarkOrange" IsEnabled="True">


                                <Grid >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="2*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>


                                    <DockPanel Grid.Column="0"  Grid.Row="0" Grid.RowSpan="1"  Margin="10,10,10,10">
                                        <TextBlock DockPanel.Dock="Left" Foreground="Black" >РАССТОЯНИЕ ОТ ИЗЛУЧАТЕЛЯ ДО ТРУБЫ В ММ</TextBlock>
                                        <TextBlock DockPanel.Dock="Top"  HorizontalAlignment="Right" Text="{ Binding ActualDistance_XrayTube_Pipe }"/>
                                    </DockPanel>
                                    <DockPanel Grid.Column="0"  Grid.Row="1" Grid.RowSpan="1"   Margin="10,10,10,10">
                                        <TextBlock DockPanel.Dock="Left" Foreground="Black" >РАССТОЯНИЕ ОТ ПРИЕМНИКА ДО ТРУБЫ В ММ</TextBlock>
                                        <TextBlock DockPanel.Dock="Top"  HorizontalAlignment="Right" Text="{ Binding ActualDistance_Detector_Pipe }"/>
                                    </DockPanel>
                                    <DockPanel Grid.Column="0"  Grid.Row="2" Grid.RowSpan="1"  Margin="10,10,10,10">
                                        <TextBlock DockPanel.Dock="Left" Foreground="Black" >РАССТОЯНИЕ ПРИЕМНИКА В ММ</TextBlock>
                                        <TextBlock DockPanel.Dock="Top"  HorizontalAlignment="Right" Text="{ Binding ActualPosPos1608X2 }"/>
                                    </DockPanel>
                                    <DockPanel Grid.Column="0"  Grid.Row="3" Grid.RowSpan="1"  Margin="10,10,10,10">
                                        <TextBlock DockPanel.Dock="Left" Foreground="Black">РАССТОЯНИЕ ИЗЛУЧАТЕЛЯ В ММ</TextBlock>
                                        <TextBlock DockPanel.Dock="Top"  HorizontalAlignment="Right" Text="{ Binding ActualPosPos1608X1 }"/>
                                    </DockPanel>
                                    <DockPanel Grid.Column="0"  Grid.Row="4" Grid.RowSpan="1"  Margin="10,10,10,10">
                                        <TextBlock DockPanel.Dock="Left" Foreground="Black">КООРДИНАТА КРАЯ ТРУБЫ ММ</TextBlock>
                                        <TextBlock DockPanel.Dock="Top"  HorizontalAlignment="Right" Text="{ Binding ActualRearFistPos}"/>
                                    </DockPanel>
                                    
                                
                                    <DockPanel Grid.Column="0"  Grid.Row="5" Grid.RowSpan="1"  Margin="10,10,10,10">
                                        <!--<TextBlock DockPanel.Dock="Top" HorizontalAlignment="Right"  Text="{ Binding TestItemVM.IntValue}"/>-->
                                        <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Right"  Text="{ Binding Path =TestItemVM.IntValue}"/>
                                    </DockPanel>
                                    <DockPanel Grid.Column="0"  Grid.Row="6" Grid.RowSpan="1"  Margin="10,10,10,10">
                                        <!--<TextBlock DockPanel.Dock="Top" HorizontalAlignment="Right"  Text="{ Binding TestItemVM.IntValue}"/>-->
                                        <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Right"  Text="{ Binding Path=TestItemVM2}"/>
                                    </DockPanel>

                                </Grid>
                            </GroupBox>
                            <GroupBox  Grid.Column="2" Header="РЕЖИМЫ" Margin="5"  Padding="5" FontFamily="Tahoma" Foreground="DarkOrange" IsEnabled="True">

                                <Grid IsEnabled="False" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="2*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <DockPanel Grid.Column="0"  Grid.Row="0" Grid.RowSpan="1"  Margin="10,10,10,10">
                                        <TextBlock DockPanel.Dock="Left" Foreground="Black" >ДВУХШОВНЫЙ РЕЖИМ КОНТРОЛЯ</TextBlock>
                                        <CheckBox DockPanel.Dock="Top" HorizontalAlignment="Right" IsChecked="{Binding TwoWeldSeam}" >ВКЛ/ВЫКЛ</CheckBox>

                                    </DockPanel>
                                    <DockPanel Grid.Column="0"  Grid.Row="1" Grid.RowSpan="1"   Margin="10,10,10,10">
                                        <TextBlock DockPanel.Dock="Left" Foreground="Black" >ПОШАГОВЫЙ РЕЖИМ КОНТРОЛЯ</TextBlock>
                                        <CheckBox DockPanel.Dock="Right" HorizontalAlignment="Right" IsChecked="{Binding StepSizeMode}">ВКЛ/ВЫКЛ</CheckBox>
                                    </DockPanel>
                                    <DockPanel Grid.Column="0"  Grid.Row="2" Grid.RowSpan="1"  Margin="10,10,10,10">
                                        <TextBlock DockPanel.Dock="Left" Foreground="Black" >РЕЖИМ ПЕРЕНАЛАДКИ</TextBlock>
                                        <CheckBox DockPanel.Dock="Right" HorizontalAlignment="Right" IsChecked="{Binding Reconfiguration}">ВКЛ/ВЫКЛ</CheckBox>
                                    </DockPanel>
                                    <DockPanel Grid.Column="0"  Grid.Row="3" Grid.RowSpan="1"  Margin="10,10,10,10">
                                        <TextBlock DockPanel.Dock="Left" Foreground="Black">ДОВОРОТ ТРУБЫ НА ВЫГРУЗКЕ</TextBlock>
                                        <CheckBox DockPanel.Dock="Right" HorizontalAlignment="Right" IsChecked="{Binding RotationOn}">ВКЛ/ВЫКЛ</CheckBox>
                                    </DockPanel>
                                    <DockPanel Grid.Column="0"  Grid.Row="4" Grid.RowSpan="1"  Margin="10,10,10,10">
                                        <TextBlock DockPanel.Dock="Left" Foreground="Black">ТРАНЗИТ</TextBlock>
                                        <CheckBox DockPanel.Dock="Right" HorizontalAlignment="Right" IsChecked="{Binding Tranzit_16100_1611_1701}">ВКЛ/ВЫКЛ</CheckBox>
                                    </DockPanel>
                                </Grid>
                            </GroupBox>

                        </Grid>
                    </Grid>
                </GroupBox>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Label  Grid.RowSpan="1" Content="ПЕРЕНАЛАДКА" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FFD26426" Margin="5,0,5,0"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>


                    <GroupBox Grid.Row="0" Header="РЕЦЕПТ" Margin="5" Padding="5" Foreground="#FFF18E17">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <!--<ColumnDefinition Width="*" />-->
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="59"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>



                            <DockPanel Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="0" Grid.RowSpan="3">
                                <ListBox DockPanel.Dock="Left" MinWidth="155" ItemsSource="{Binding ListReicept}" 
                                SelectedItem="{Binding ListReiceptSelected}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="5">


                                                <TextBlock Text="{Binding Path=Name}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>

                                </ListBox>

                            </DockPanel>
                            <GroupBox Grid.Column="1" Grid.ColumnSpan="2" Margin="10,0,0,0">

                            </GroupBox>
                            <GroupBox Header="ИЗЛУЧАТЕЛЬ" Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="1" Margin="10,0,0,0">
                                <StackPanel>
                                    <DockPanel>
                                        <TextBlock Grid.Column="3"   Grid.Row="0" HorizontalAlignment="Left" Margin="5,5,5,5"  TextAlignment="Center" Foreground="Black" >ПОЛОЖЕНИЕ ОСИ</TextBlock>
                                        <TextBlock Grid.Column="3"   Grid.Row="0" HorizontalAlignment="Right" Margin="5,5,5,5"  TextAlignment="Center" Text="{Binding ActualPosPos1608X1}"/> 
                                    </DockPanel>
                                    <DockPanel>
                                        <TextBlock Grid.Column="3"   Grid.Row="0" HorizontalAlignment="Left" Margin="5,5,5,5"   TextAlignment="Center" Foreground="Black" >НАЗНАЧЕНИЕ</TextBlock>
                                        <TextBlock Grid.Column="3"   Grid.Row="0" HorizontalAlignment="Right" Margin="5,5,5,5"   TextAlignment="Center" Text="{Binding ParamTagetPos1608X1 }"/>
                                    </DockPanel>
                                    <DockPanel>
                                        <TextBlock Grid.Column="3"   Grid.Row="0" HorizontalAlignment="Left" Margin="5,5,5,5"   TextAlignment="Center" Foreground="Black" >В ПОЗИЦИИ</TextBlock>
                                        <Rectangle Fill="{Binding fillPos_Ok_X1}" HorizontalAlignment="Right"  Height="16" Margin="5,5,5,5" Stroke="Black" Width="16"/>
                                    </DockPanel>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="УПРАВЛЕНИЕ" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1">
                                <StackPanel>

                                    <DockPanel IsEnabled="False" Grid.Column="0"  Grid.Row="2" Grid.RowSpan="1"  Margin="10,10,10,10">
                                        <TextBlock DockPanel.Dock="Left" Foreground="Black" >РЕЖИМ ПЕРЕНАЛАДКИ</TextBlock>
                                        <CheckBox DockPanel.Dock="Right" HorizontalAlignment="Right" IsChecked="{Binding Reconfiguration}">ВКЛ/ВЫКЛ</CheckBox>
                                    </DockPanel>
                                    <Button IsEnabled="False" Command="{Binding ReconfigApplyComand}" Grid.Row="0"  Grid.ColumnSpan="2" Grid.Column="0" Margin="10,5,5,5" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="36" >
                                        <DockPanel>
                                            <TextBlock Text="ЗАПУСТИТЬ ПЕРЕХОД" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FFD26426" Margin="15,5,15,5"/>
                                        </DockPanel>
                                    </Button>
                                </StackPanel>


                            </GroupBox>
                            <GroupBox Header="ПРИЕМНИК" Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="2" Margin="10,0,0,0">
                                <StackPanel>
                                    <DockPanel>
                                        <TextBlock Grid.Column="3"   Grid.Row="0" HorizontalAlignment="Left" Margin="5,5,5,5"  TextAlignment="Center" Foreground="Black" >ПОЛОЖЕНИЕ ОСИ</TextBlock>
                                        <TextBlock Grid.Column="3"   Grid.Row="0" HorizontalAlignment="Right" Margin="5,5,5,5"  TextAlignment="Center"  Text="{Binding ActualPosPos1608X2}"/>
                                    </DockPanel>
                                    <DockPanel>
                                        <TextBlock Grid.Column="3"   Grid.Row="0" HorizontalAlignment="Left" Margin="5,5,5,5"   TextAlignment="Center" Foreground="Black" >НАЗНАЧЕНИЕ</TextBlock>
                                        <TextBlock Grid.Column="3"   Grid.Row="0" HorizontalAlignment="Right" Margin="5,5,5,5"   TextAlignment="Center" Text="{Binding ParamTagetPos1608X2 }"/> 
                                    </DockPanel>
                                    <DockPanel>
                                        <TextBlock Grid.Column="3"   Grid.Row="0" HorizontalAlignment="Left" Margin="5,5,5,5"   TextAlignment="Center" Foreground="Black" >В ПОЗИЦИИ</TextBlock>
                                        <Rectangle Fill="{Binding fillPos_Ok_X2}" HorizontalAlignment="Right"  Height="16" Margin="5,5,5,5" Stroke="Black" Width="16"/>
                                    </DockPanel>
                                </StackPanel>

                            </GroupBox>

                            <StackPanel Grid.Column="1" Grid.ColumnSpan="2">

                                <DockPanel Margin="5,5,5,5">

                                    <Button DockPanel.Dock="Right" Command="{Binding  DownLoadRecipeinPLCComand}"  HorizontalAlignment="Right" VerticalAlignment="Center" Height="36" Margin="0,0,15,0" >
                                        <DockPanel>
                                            <Image Source="Resources/loade_Reciept.png" />
                                            <TextBlock Text="ЗАГРУЗИТЬ РЕЦЕПТ В ПЛК" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFD26426" Margin="5,6,18,8"/>
                                        </DockPanel>
                                    </Button>
                                    <TextBox IsEnabled="False" DockPanel.Dock="Top" Grid.Column="5" Grid.ColumnSpan="2" MinWidth="230" Text="{ Binding ListReiceptEditName,Mode=OneWay}" HorizontalAlignment="Stretch" VerticalAlignment="Center" Foreground="#FFD26426"  FontStyle="Normal" FontSize="16" TextAlignment="Center"  Height="30" Margin="15,10"/>

                                </DockPanel>


                                <DockPanel>
                                    <Grid DockPanel.Dock="Top">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                    </Grid>
                                </DockPanel>

                            </StackPanel>
                        </Grid>

                    </GroupBox>
                    <GroupBox  Grid.Row="1"  Header="ПАРАМЕТРЫ РЕЦЕПТА" Margin="5" Padding="5" Foreground="#FFF18E17">
                        <TabControl  Grid.Row="3" Grid.RowSpan="1"  Grid.Column="0" Grid.ColumnSpan="10"  TabStripPlacement="Top"   HorizontalAlignment="Stretch" SelectedIndex="{Binding SelectedTab}" >

                            <TabItem >
                                <TabItem.Header>
                                    <StackPanel>
                                        <Label  Grid.RowSpan="1" Content="ПАРАМЕТРЫ ПЕРЕВАЛКИ" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FFD26426" Margin="5,0,5,0" />
                                    </StackPanel>
                                </TabItem.Header>
                                <DockPanel Grid.Column="0"  Grid.Row="1" Grid.RowSpan="4"  >
                                    <ListView DockPanel.Dock="Bottom" MinWidth="155" ItemsSource="{Binding ReconfigurationList }" SelectedItem="{Binding ListParamLonCarSelected}">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Width="420">
                                                    <GridViewColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <TextBlock   Text="ПАРАМЕТР"  Foreground="DarkOrange" TextAlignment="Center" FontSize="12"  ></TextBlock>
                                                        </DataTemplate>
                                                    </GridViewColumn.HeaderTemplate>
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Path=Param}" TextAlignment="Left" Margin="5"></TextBlock>
                                                        </DataTemplate>

                                                    </GridViewColumn.CellTemplate>

                                                </GridViewColumn>
                                                <GridViewColumn Width="120">
                                                    <GridViewColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <TextBlock   Text="ЗНАЧЕНИЕ В ПЛК"  Foreground="DarkOrange" TextAlignment="Center" FontSize="12" ></TextBlock>
                                                        </DataTemplate>
                                                    </GridViewColumn.HeaderTemplate>
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Path=PLCValue}"  HorizontalAlignment="Center"  VerticalAlignment="Center" TextAlignment="Center" Style="{StaticResource NameCellStyle}"></TextBlock>

                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                                <GridViewColumn Width="120">
                                                    <GridViewColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <TextBlock   Text="ЗНАЧЕНИЕ РЕЦЕПТА"  Foreground="DarkOrange" TextAlignment="Center" FontSize="12" ></TextBlock>
                                                        </DataTemplate>
                                                    </GridViewColumn.HeaderTemplate>
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Path=RecieptValue}" HorizontalAlignment="Center" TextAlignment="Center" ></TextBlock>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                            </GridView>
                                        </ListView.View>


                                    </ListView>

                                </DockPanel>

                            </TabItem>
                            <TabItem >
                                <TabItem.Header>
                                    <StackPanel>
                                        <Label  Grid.RowSpan="1" Content="ПАРАМЕТРЫ ДЛИННЫХ ПЕРЕМЕЩЕНИЙ ТЕЛЕГИ" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FFD26426" Margin="5,0,5,0"/>
                                    </StackPanel>
                                </TabItem.Header>
                                <DockPanel Grid.Column="0"  Grid.Row="1" Grid.RowSpan="4"  >
                                    <ListView DockPanel.Dock="Bottom" MinWidth="155" ItemsSource="{Binding LongWayList}" 
                                SelectedItem="{Binding ListParamGeneratorSelected}">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Width="420">
                                                    <GridViewColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <TextBlock   Text="ПАРАМЕТР"  Foreground="DarkOrange" TextAlignment="Center" FontSize="12"  ></TextBlock>
                                                        </DataTemplate>
                                                    </GridViewColumn.HeaderTemplate>
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Path=Param}" TextAlignment="Left" Margin="5"></TextBlock>
                                                        </DataTemplate>

                                                    </GridViewColumn.CellTemplate>

                                                </GridViewColumn>
                                                <GridViewColumn Width="120">
                                                    <GridViewColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <TextBlock   Text="ЗНАЧЕНИЕ В ПЛК"  Foreground="DarkOrange" TextAlignment="Center" FontSize="12" ></TextBlock>
                                                        </DataTemplate>
                                                    </GridViewColumn.HeaderTemplate>
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Path=PLCValue}"  HorizontalAlignment="Center"  VerticalAlignment="Center" TextAlignment="Center" Style="{StaticResource NameCellStyle}"></TextBlock>

                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                                <GridViewColumn Width="120">
                                                    <GridViewColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <TextBlock   Text="ЗНАЧЕНИЕ РЕЦЕПТА"  Foreground="DarkOrange" TextAlignment="Center" FontSize="12" ></TextBlock>
                                                        </DataTemplate>
                                                    </GridViewColumn.HeaderTemplate>
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Path=RecieptValue}" HorizontalAlignment="Center" TextAlignment="Center" ></TextBlock>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                            </GridView>
                                        </ListView.View>

                                    </ListView>

                                </DockPanel>
                            </TabItem>
                            <TabItem >
                                <TabItem.Header>
                                    <StackPanel>
                                        <Label  Grid.RowSpan="1" Content="ПАРАМЕТРЫ КОРОТКИХ ПЕРЕМЕЩЕНИЙ ТЕЛЕГИ" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FFD26426" Margin="5,0,5,0"/>
                                    </StackPanel>
                                </TabItem.Header>
                                <DockPanel Grid.Column="0"  Grid.Row="1" Grid.RowSpan="4"  >
                                    <ListView DockPanel.Dock="Bottom" MinWidth="155" ItemsSource="{Binding ShotWayList}" 
                                SelectedItem="{Binding ListParamReciverSelected}">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Width="420">
                                                    <GridViewColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <TextBlock   Text="ПАРАМЕТР"  Foreground="DarkOrange" TextAlignment="Center" FontSize="12"  ></TextBlock>
                                                        </DataTemplate>
                                                    </GridViewColumn.HeaderTemplate>
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Path=Param}" TextAlignment="Left" Margin="5"></TextBlock>
                                                        </DataTemplate>

                                                    </GridViewColumn.CellTemplate>

                                                </GridViewColumn>
                                                <GridViewColumn Width="120">
                                                    <GridViewColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <TextBlock   Text="ЗНАЧЕНИЕ В ПЛК"  Foreground="DarkOrange" TextAlignment="Center" FontSize="12" ></TextBlock>
                                                        </DataTemplate>
                                                    </GridViewColumn.HeaderTemplate>
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
